{
  "name": "eaglet-fold",
  "displayName": "Eaglet Fold",
  "description": "Fold Long Tailwind Classes",
  "version": "0.0.1",
  "publisher": "theeagle",
  "icon": "media/eaglet-fold-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheEagle-Benson/eaglet-fold"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  "onStartupFinished",
  "onCommand:eaglet.fold",
  "onCommand:eaglet.fold/unfold All",
  "onCommand:eaglet.toggleFoldMode"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "eaglet.fold",
      "title": "Tailwind Fold/Unfold"
    },
    {
      "command": "eaglet.fold/unfold All",
      "title": "Tailwind Fold/Unfold All"
  }],
  "menus":{
    "editor/context": [
      {
        "command": "eaglet.fold",
        "when": "editorTextFocus",
        "group": "navigation@1"
      },
      {
        "command": "eaglet.fold/unfold All",
        "when": "editorTextFocus",
        "group": "navigation@1"
      }
    ]
  }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major"
  },
  "devDependencies": {
    "@types/vscode": "1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
